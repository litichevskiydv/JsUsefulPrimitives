{
  "name": "js-useful-primitives",
  "version": "0.1.0",
  "description": "Primitives for comfort coding with Node.js",
  "scripts": {
    "build:server:protos": "mkdirp ./src/grpc/generated/server && pbjs -r greeter -t static-module -w commonjs --no-verify -o ./src/grpc/generated/server/greeter_pb.js ./src/grpc/protos/greeter.proto",
    "build:server:types": "mkdirp ./src/grpc/generated/server && pbts -o ./src/grpc/generated/server/greeter_pb.d.ts ./src/grpc/generated/server/greeter_pb.js",
    "build:server:swagger": "mkdirp ./src/grpc/generated/server && node ./src/grpc/complier/bin/protoc-gen-swagger.js --swagger_opt=json_names_for_fields=true --swagger_out=logtostderr=true:./src/grpc/generated/server -I ./src/grpc/protos/ ./src/grpc/protos/greeter.proto",
    "build:server": "npm run build:server:protos && npm run build:server:types && npm run build:server:swagger",
    "build:client:protos": "mkdirp ./src/grpc/generated/client && node ./src/grpc/complier/bin/protoc-gen-grpc.js --js_out=import_style=commonjs,binary:./src/grpc/generated/client --grpc_out=./src/grpc/generated/client -I ./src/grpc/protos/ ./src/grpc/protos/greeter.proto",
    "build:client:types": "mkdirp ./src/grpc/generated/client && node ./src/grpc/complier/bin/protoc-gen-ts.js --ts_out=./src/grpc/generated/client -I ./src/grpc/protos/ ./src/grpc/protos/greeter.proto",
    "build:client": "npm run build:client:protos && npm run build:client:types",
    "build": "npm run build:server && npm run build:client",
    "build:watch": "nodemon --ext *.proto --watch ./src/grpc/protos --exec npm run build",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litichevskiydv/JsUsefulPrimitives.git"
  },
  "author": "dmitriy.litichevskiy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/litichevskiydv/JsUsefulPrimitives/issues"
  },
  "homepage": "https://github.com/litichevskiydv/JsUsefulPrimitives#readme",
  "dependencies": {
    "@grpc/proto-loader": "0.4.0",
    "find": "0.2.9",
    "find-node-modules": "1.0.4",
    "google-protobuf": "3.7.1",
    "grpc": "1.18.0",
    "grpc-error": "1.0.0"
  },
  "devDependencies": {
    "grpc-tools": "1.6.6",
    "jest": "23.6.0",
    "jest-extended": "0.11.0",
    "nodemon": "1.18.6",
    "protobufjs": "6.8.8",
    "ts-protoc-gen": "0.7.7"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
